extends layout
block content
    include head
    .row
        .col-md-6.col-md-offset-3
            h1 Login!
            form.form-inline(id='login', action='/login', method='post', role='form')
                .form-group
                    label.sr-only(for='username') User Name 
                    input#username.form-control(type='text', placeholder='Enter User Name', name='username')
                .form-group
                    label.sr-only(for='password') Password
                    input#password.form-control(type='password', placeholder='Password', name='password')
                button.btn.btn-default(class='login', type='submit') Sign in